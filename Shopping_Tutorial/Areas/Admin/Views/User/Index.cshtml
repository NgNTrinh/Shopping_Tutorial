
@{
    ViewData["title"] = "Người dùng";
}
<h3>Danh sách người dùng</h3>
<a class="btn btn-primary" asp-action="Create" asp-controller="User">Thêm người dùng</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Tên người dùng</th>
            <th scope="col">Email</th>
            <th scope="col">Phone</th>
            <th scope="col">PasswordHash</th>
            <th scope="col">Role</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var usersWithRoles in Model)
        {
            <tr>
                <td>-</td>
                <td>@usersWithRoles.User.UserName</td>
                <td>@usersWithRoles.User.Email</td>
                <td>@usersWithRoles.User.PhoneNumber</td>
                <td>@usersWithRoles.User.PasswordHash</td>
                <td>
                    @usersWithRoles.RoleName
                </td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="User" asp-route-Id="@usersWithRoles.User.Id">Sửa</a>
                    <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="User" asp-route-Id="@usersWithRoles.User.Id">Xóa</a>

                </td>
            </tr>
        }
    </tbody>
</table>