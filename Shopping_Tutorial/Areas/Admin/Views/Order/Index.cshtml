@model IEnumerable<OrderModel>
@{
    ViewData["Title"] = "Đơn hàng";
}
<h3>Danh sách đơn hàng</h3>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Mã đơn hàng</th>
            <th scope="col">Tên người đặt</th>
            <th scope="col">Ngày tạo</th>
            <th scope="col">Trạng thái</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <th scope="row">@item.OrderCode</th>
                <td>@item.UserName</td>
                <td>@item.CreatedDate.ToString("dd/MM/yyyy HH:mm:ss")</td>
                <td>
                    @if (@item.Status == 1)
                    {
                        <span class="text text-success">Đơn hàng mới</span>
                    }
                    else
                    {
                        <span class="text text-danger">Đơn hàng đã xác nhận</span>
                    }

                         <td>
                <a class="btn btn-warning btn-sm" asp-action="ViewOrder" asp-controller="Order" asp-route-ordercode="@item.OrderCode">Xem chi tiết</a>
                    <form method="post" action="@Url.Action("DeleteOrder", "Order")" style="display:inline;">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Xóa</button>
                    </form>

                </td>
                <td>

            </tr>
        }
    </tbody>
</table>