@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
    ViewData["title"] = "Phân quyền";
}
<h3>Danh sách quyền</h3>
<a asp-action="Create" asp-controller="Role">Thêm quyền</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Tên</th>
            <th scope="col">Quyền</th>


        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>


                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Role" asp-route-Id="@item.Id">Sửa</a>
                    <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="Role" asp-route-Id="@item.Id">Xóa</a>

                </td>
            </tr>
        }
    </tbody>
</table>