@model ContactModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Footer Design</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f9f9f9;
        }

        .footer {
            background-color: #0a2a52;
            color: white;
            padding: 20px 40px;
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;
        }

        .footer-column {
            flex: 1;
            margin: 10px;
            min-width: 200px;
        }

            .footer-column h5 {
                font-size: 18px;
                font-weight: bold;
                margin-bottom: 15px;
                border-bottom: 1px solid #ddd;
                padding-bottom: 5px;
            }

            .footer-column p, .footer-column a {
                font-size: 14px;
                color: #cfcfcf;
                margin: 5px 0;
                text-decoration: none;
            }

                .footer-column a:hover {
                    color: #f9a825;
                }

        .footer-bottom {
            text-align: center;
            margin-top: 20px;
            font-size: 12px;
            color: #cfcfcf;
            border-top: 1px solid #ddd;
            padding-top: 10px;
        }
    </style>
</head>
<body>
    <!-- Footer -->
    <div class="footer">
        <!-- Cột 1 -->
        <div class="footer-column">
            <h5>LOGO</h5>
            <p><img src="https://img.freepik.com/premium-vector/tc-ct-letter-logo-icon-design_106546-3365.jpg" width="55%" /></p>
        </div>
        <!-- Cột 2 -->
        <div class="footer-column">
            <h5>VỀ SHOP</h5>
            <p><a href="#">Tên Shop: @Model.Name</a></p>
            <p><a href="#">Giới thiệu: @Html.Raw(Model.Description)</a></p>

        </div>

        <!-- Cột 3 -->
        <div class="footer-column">
            <h5>TRỢ GIÚP KHÁCH HÀNG</h5>
            <p>Hotline:  @Model.Phone</p>
            <p>facebook.com/Shopbandothethao</p>
            <p>Email: @Model.Email</p>
        </div>


    </div>


</body>
</html>
